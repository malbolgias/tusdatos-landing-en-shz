---
import "../styles/global.css"
import MobileMenu from "../components/MobileMenu.astro"

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Tusdatos - Your Strategic Ally in Validation and Compliance" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col">
		<!-- Modern Header -->
		<header class="bg-white/95 backdrop-blur-md shadow-lg border-b border-gray-100 sticky top-0 z-50 transition-all duration-300">
			<nav class="container mx-auto px-4 py-4">
				<div class="flex justify-between items-center">
					<!-- Logo -->
					<a href="/" class="flex items-center space-x-3 group">
						<div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 hover-scale">
							<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
							</svg>
						</div>
						<div>
							<div class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">Tusdatos</div>
							<div class="text-xs text-gray-500 -mt-1">Validation & Compliance</div>
						</div>
					</a>

					<!-- Desktop Navigation -->
					<div class="hidden md:flex items-center space-x-8">
						<a href="/about" class="text-gray-700 hover:text-blue-600 font-medium transition-all duration-300 relative group">
							About
							<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-600 to-blue-700 group-hover:w-full transition-all duration-300"></span>
						</a>
						<a href="/services" class="text-gray-700 hover:text-blue-600 font-medium transition-all duration-300 relative group">
							Services
							<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-600 to-blue-700 group-hover:w-full transition-all duration-300"></span>
						</a>
						<a href="/pricing" class="text-gray-700 hover:text-blue-600 font-medium transition-all duration-300 relative group">
							Pricing
							<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-600 to-blue-700 group-hover:w-full transition-all duration-300"></span>
						</a>
						<a href="/contact" class="text-gray-700 hover:text-blue-600 font-medium transition-all duration-300 relative group">
							Contact
							<span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-blue-600 to-blue-700 group-hover:w-full transition-all duration-300"></span>
						</a>
						
						<!-- CTA Button -->
						<a href="/contact" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-2 rounded-lg font-semibold hover:from-blue-700 hover:to-blue-800 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 btn-animate btn-ripple">
							Get Started
						</a>
					</div>

					<!-- Mobile Menu Button -->
					<button class="md:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors duration-200 hover-scale">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						</svg>
					</button>
				</div>
			</nav>
		</header>

		<MobileMenu />

		<main class="flex-grow">
			<slot />
		</main>

		<!-- Modern Footer -->
		<footer class="bg-gray-900 text-white">
			<!-- Main Footer Content -->
			<div class="container mx-auto px-4 py-16">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<!-- Company Info -->
					<div class="lg:col-span-2">
						<div class="flex items-center space-x-3 mb-6">
							<div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center">
								<svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
							</div>
							<div>
								<h3 class="text-2xl font-bold text-white">Tusdatos</h3>
								<p class="text-gray-400 text-sm">Your Strategic Ally</p>
							</div>
						</div>
						<p class="text-gray-300 mb-6 leading-relaxed max-w-md">
							Comprehensive validation and compliance services to protect your business and ensure regulatory adherence across Colombia and Latin America.
						</p>
						<div class="flex space-x-4">
							<a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-blue-600 transition-colors">
								<svg class="w-5 h-5 text-gray-400 hover:text-white" fill="currentColor" viewBox="0 0 24 24">
									<path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
								</svg>
							</a>
							<a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-blue-600 transition-colors">
								<svg class="w-5 h-5 text-gray-400 hover:text-white" fill="currentColor" viewBox="0 0 24 24">
									<path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
								</svg>
							</a>
							<a href="#" class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center hover:bg-blue-600 transition-colors">
								<svg class="w-5 h-5 text-gray-400 hover:text-white" fill="currentColor" viewBox="0 0 24 24">
									<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
								</svg>
							</a>
						</div>
					</div>

					<!-- Services -->
					<div>
						<h4 class="text-lg font-semibold mb-6 text-white">Services</h4>
						<ul class="space-y-3">
							<li>
								<a href="/services/background-checks" class="text-gray-300 hover:text-blue-400 transition-colors">
									Background Checks
								</a>
							</li>
							<li>
								<a href="/services/sanctions-screening" class="text-gray-300 hover:text-blue-400 transition-colors">
									Sanction Screening
								</a>
							</li>
							<li>
								<a href="/services/compliance-services" class="text-gray-300 hover:text-blue-400 transition-colors">
									Compliance Services
								</a>
							</li>
							<li>
								<a href="/services/empresas-platform" class="text-gray-300 hover:text-blue-400 transition-colors">
									Empresas Platform
								</a>
							</li>
						</ul>
					</div>

					<!-- Company -->
					<div>
						<h4 class="text-lg font-semibold mb-6 text-white">Company</h4>
						<ul class="space-y-3">
							<li>
								<a href="/about" class="text-gray-300 hover:text-blue-400 transition-colors">
									About Us
								</a>
							</li>
							<li>
								<a href="/contact" class="text-gray-300 hover:text-blue-400 transition-colors">
									Contact
								</a>
							</li>
							<li>
								<a href="/pricing" class="text-gray-300 hover:text-blue-400 transition-colors">
									Pricing
								</a>
							</li>
							<li>
								<a href="/privacy" class="text-gray-300 hover:text-blue-400 transition-colors">
									Privacy Policy
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<!-- Contact Bar -->
			<div class="bg-gray-800 border-t border-gray-700">
				<div class="container mx-auto px-4 py-6">
					<div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
						<div class="flex flex-col md:flex-row items-center space-y-2 md:space-y-0 md:space-x-8">
							<div class="flex items-center text-gray-300">
								<svg class="w-4 h-4 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
									<path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
									<path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
								</svg>
								<a href="mailto:comercial@tusdatos.co" class="hover:text-blue-400 transition-colors">
									comercial@tusdatos.co
								</a>
							</div>
							<div class="flex items-center text-gray-300">
								<svg class="w-4 h-4 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
									<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
								</svg>
								<a href="tel:+573054362276" class="hover:text-blue-400 transition-colors">
									+57 305 436 2276
								</a>
							</div>
							<div class="flex items-center text-gray-300">
								<svg class="w-4 h-4 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
								</svg>
								<span>Bogot√°, Colombia</span>
							</div>
						</div>
						<button onclick="window.scrollTo({top: 0, behavior: 'smooth'})" class="flex items-center text-gray-300 hover:text-blue-400 transition-colors">
							<svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
							</svg>
							Back to Top
						</button>
					</div>
				</div>
			</div>

			<!-- Copyright Bar -->
			<div class="bg-gray-950 border-t border-gray-800">
				<div class="container mx-auto px-4 py-4">
					<div class="flex flex-col md:flex-row justify-between items-center space-y-2 md:space-y-0">
						<div class="text-gray-400 text-sm">
							&copy; {new Date().getFullYear()} Tusdatos. All rights reserved.
						</div>
						<div class="flex items-center space-x-6">
							<div class="flex items-center text-gray-400 text-sm">
								<svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								SSL Secured
							</div>
							<div class="flex items-center text-gray-400 text-sm">
								<svg class="w-4 h-4 text-blue-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								ISO Compliant
							</div>
						</div>
					</div>
				</div>
			</div>
		</footer>

		<!-- Scroll to Top Button -->
		<button id="scrollToTop" class="fixed bottom-8 right-8 bg-blue-600 text-white p-3 rounded-full shadow-lg hover:bg-blue-700 transition-all duration-300 opacity-0 pointer-events-none z-50 hover-scale">
			<svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
				<path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
			</svg>
		</button>

		<script>
			import '../scripts/animations.js';
			
			// Scroll to top functionality
			const scrollToTopBtn = document.getElementById('scrollToTop');
			
			window.addEventListener('scroll', () => {
				if (window.pageYOffset > 300) {
					scrollToTopBtn.classList.remove('opacity-0', 'pointer-events-none');
					scrollToTopBtn.classList.add('opacity-100', 'pointer-events-auto');
				} else {
					scrollToTopBtn.classList.add('opacity-0', 'pointer-events-none');
					scrollToTopBtn.classList.remove('opacity-100', 'pointer-events-auto');
				}
			});
			
			scrollToTopBtn.addEventListener('click', () => {
				window.scrollTo({
					top: 0,
					behavior: 'smooth'
				});
			});
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

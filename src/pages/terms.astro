---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Terms of Service - Tusdatos">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Terms of Service
        </h1>
        <p class="text-xl mb-8">
          The terms and conditions governing your use of our services
        </p>
        <p class="text-sm opacity-90">
          Last updated: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </p>
      </div>
    </div>
  </section>

  <!-- Terms of Service Content -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto prose prose-lg">
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-4">1. Acceptance of Terms</h2>
          <p class="text-gray-700 mb-4">
            By accessing and using the services provided by Tusdatos ("we," "our," or "us"), you accept and agree to be bound by the terms and provision of this agreement. If you do not agree to abide by the above, please do not use this service.

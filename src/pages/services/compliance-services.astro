---
import Layout from '../../layouts/Layout.astro';

const serviceData = {
  title: "Compliance Services",
  subtitle: "Anti-Money Laundering & Regulatory Compliance",
  heroDescription: "Comprehensive compliance solutions for Anti-Money Laundering and Counter-Terrorism Financing (AML/CTF) regulations, helping businesses meet regulatory requirements and mitigate risks.",
  heroImage: "/images/photos/compliance-consulting.jpg",
  icon: "/images/compliance.svg",
  url: "/services/compliance-services"
};

const features = [
  {
    title: "LAFT Compliance",
    description: "Full implementation of Colombian Anti-Money Laundering and Terrorism Financing (LAFT) framework requirements.",
    icon: "shield-check"
  },
  {
    title: "PTEE Implementation",
    description: "Development and implementation of Business Transparency and Ethics Plans (PTEE) for corporate governance.",
    icon: "document-check"
  },
  {
    title: "Risk Assessment",
    description: "Comprehensive risk assessments and vulnerability analysis for money laundering and terrorism financing.",
    icon: "chart-pie"
  },
  {
    title: "Policy Development",
    description: "Custom compliance policies, procedures, and internal controls tailored to your business needs.",
    icon: "document-text"
  },
  {
    title: "Training Programs",
    description: "Employee training and awareness programs on compliance requirements and best practices.",
    icon: "academic-cap"
  },
  {
    title: "Ongoing Support",
    description: "Continuous monitoring, updates, and support to maintain compliance with changing regulations.",
    icon: "support"
  }
];

const benefits = [
  "Ensure regulatory compliance and avoid penalties",
  "Protect your business from financial crime risks",
  "Build trust with regulators and stakeholders",
  "Streamline compliance processes and reduce costs",
  "Access expert guidance and best practices"
];

const useCases = [
  "Financial institutions and banks",
  "Investment and securities firms",
  "Real estate and construction companies",
  "Gaming and entertainment businesses",
  "International trade and import/export"
];

const process = [
  "Initial compliance assessment",
  "Risk analysis and gap identification",
  "Policy and procedure development",
  "Implementation and training",
  "Ongoing monitoring and support"
];

const testimonials = [
  {
    name: "María González",
    position: "Compliance Director",
    company: "Banco Comercial",
    content: "Tusdatos helped us implement a comprehensive LAFT compliance program that exceeded regulatory expectations. Their expertise is invaluable.",
    rating: 5,
    image: "/images/photos/compliance-officer.jpg"
  },
  {
    name: "Roberto Herrera",
    position: "Legal Manager",
    company: "Inversiones Financieras",
    content: "The PTEE implementation was seamless and professional. Our board is confident we're meeting all transparency and ethics requirements.",
    rating: 5,
    image: "/images/photos/legal-manager.jpg"
  },
  {
    name: "Ana Patricia Silva",
    position: "Risk Director",
    company: "Corporación Inmobiliaria",
    content: "Their risk assessment methodology is thorough and practical. We now have a clear roadmap for managing compliance risks effectively.",
    rating: 5,
    image: "/images/photos/risk-director.jpg"
  }
];

const stats = [
  { number: "100%", label: "Compliance Rate" },
  { number: "500+", label: "Clients Served" },
  { number: "24/7", label: "Support Available" },
  { number: "15+", label: "Years Experience" }
];

const faqs = [
  {
    question: "What is LAFT compliance?",
    answer: "LAFT (Lavado de Activos y Financiación del Terrorismo) is Colombia's anti-money laundering and terrorism financing framework that requires businesses to implement specific controls and reporting mechanisms."
  },
  {
    question: "Who needs to comply with LAFT regulations?",
    answer: "Financial institutions, certain businesses, and professionals are required to comply with LAFT regulations based on their activities and risk exposure."
  },
  {
    question: "What is a PTEE plan?",
    answer: "PTEE (Plan de Transparencia y Ética Empresarial) is a Business Transparency and Ethics Plan that outlines corporate governance, ethics policies, and transparency measures."
  },
  {
    question: "How long does compliance implementation take?",
    answer: "Implementation time varies based on business size and complexity, typically ranging from 2-6 months for complete setup."
  },
  {
    question: "Do you provide ongoing compliance support?",
    answer: "Yes, we offer continuous monitoring, updates, and support to ensure ongoing compliance with changing regulations."
  },
  {
    question: "What happens during a compliance audit?",
    answer: "We conduct thorough assessments of your current compliance status, identify gaps, and provide detailed recommendations for improvement."
  }
];

const pricing = [
  {
    name: "Basic Compliance",
    price: "$2,500",
    period: "one-time",
    description: "Essential compliance setup for small businesses",
    features: [
      "LAFT compliance assessment",
      "Basic policy development",
      "Employee training materials",
      "Email support"
    ],
    popular: false
  },
  {
    name: "Professional Compliance",
    price: "$5,000",
    period: "one-time",
    description: "Comprehensive compliance for growing businesses",
    features: [
      "All Basic features",
      "PTEE implementation",
      "Risk assessment",
      "Custom training programs",
      "6 months support",
      "Priority support"
    ],
    popular: true
  },
  {
    name: "Enterprise Compliance",
    price: "$10,000",
    period: "one-time",
    description: "Full compliance solution for large organizations",
    features: [
      "All Professional features",
      "Advanced risk modeling",
      "Custom software integration",
      "Ongoing monitoring",
      "Regulatory updates",
      "Dedicated compliance officer"
    ],
    popular: false
  }
];
---

<Layout title="Compliance Services - Anti-Money Laundering & Regulatory Compliance | Tusdatos">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-sky-600 via-blue-700 to-indigo-800 text-white py-20">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center mb-6">
            <img src={serviceData.icon} alt="Compliance Services Icon" class="w-12 h-12 mr-4" />
            <span class="text-sky-200 font-semibold">Compliance Services</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Anti-Money Laundering & Regulatory Compliance
          </h1>
          <p class="text-xl text-sky-100 mb-8">
            {serviceData.heroDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-white text-sky-600 px-8 py-4 rounded-lg font-semibold hover:bg-sky-50 transition-colors text-center">
              Get Started
            </a>
            <a href="#pricing" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-sky-600 transition-colors text-center">
              View Pricing
            </a>
          </div>
        </div>
        <div class="relative">
          <img src={serviceData.heroImage} alt="Compliance Consulting" class="rounded-lg shadow-2xl" />
          <div class="absolute -bottom-4 -left-4 bg-white p-4 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-sky-600">100%</div>
              <div class="text-sm text-gray-600">Compliance Rate</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-purple-600 mb-2">{stat.number}</div>
            <div class="text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Comprehensive Compliance Solutions</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Expert guidance and implementation for all your regulatory compliance needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {feature.icon === "shield-check" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                )}
                {feature.icon === "document-check" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
                {feature.icon === "chart-pie" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z"></path>
                )}
                {feature.icon === "document-text" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                )}
                {feature.icon === "academic-cap" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                )}
                {feature.icon === "support" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
                )}
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Why Choose Our Compliance Services?</h2>
          <ul class="space-y-4">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-purple-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-lg">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="relative">
          <img src="/images/photos/regulatory-compliance.jpg" alt="Regulatory Compliance" class="rounded-lg shadow-xl" />
          <div class="absolute -bottom-6 -right-6 bg-white p-6 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-purple-600">500+</div>
              <div class="text-sm text-gray-600">Clients Served</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Industries We Serve</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our compliance services are tailored for various industries with specific regulatory requirements
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {useCases.map((useCase) => (
          <div class="bg-white p-6 rounded-lg shadow-lg border-l-4 border-purple-500">
            <h3 class="text-lg font-semibold mb-3">{useCase}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Compliance Process</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A systematic approach to ensure comprehensive regulatory compliance
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
        {process.map((step, index) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-600 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
              {index + 1}
            </div>
            <h3 class="font-semibold mb-2">{step}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Clients Say</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Trusted by leading organizations for their compliance needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="flex items-center mb-6">
              <img src={testimonial.image} alt={testimonial.name} class="w-16 h-16 rounded-full object-cover mr-4" />
              <div>
                <h4 class="font-semibold">{testimonial.name}</h4>
                <p class="text-gray-600 text-sm">{testimonial.position}</p>
                <p class="text-gray-600 text-sm">{testimonial.company}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">"{testimonial.content}"</p>
            <div class="flex text-yellow-400">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Pricing Plans</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Choose the compliance package that best fits your organization's needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {pricing.map((plan) => (
          <div class={`bg-white p-8 rounded-lg shadow-lg ${plan.popular ? 'ring-2 ring-purple-500 relative' : ''}`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-purple-500 text-white px-4 py-2 rounded-full text-sm font-semibold">Most Popular</span>
              </div>
            )}
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold mb-4">{plan.name}</h3>
              <div class="mb-4">
                <span class="text-4xl font-bold">{plan.price}</span>
                <span class="text-gray-600">/{plan.period}</span>
              </div>
              <p class="text-gray-600">{plan.description}</p>
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-purple-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <a href="/contact" class="w-full bg-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-purple-700 transition-colors text-center block">
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Frequently Asked Questions</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Get answers to common questions about our compliance services
        </p>
      </div>
      <div class="max-w-4xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-semibold mb-3">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-purple-600 to-purple-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Ensure Compliance?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Protect your business and ensure regulatory compliance with our expert guidance. Get started with our comprehensive compliance services today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-purple-600 px-8 py-4 rounded-lg font-semibold hover:bg-purple-50 transition-colors">
          Contact Us
        </a>
        <a href="/services" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-purple-600 transition-colors">
          View All Services
        </a>
      </div>
    </div>
  </section>
</Layout> 
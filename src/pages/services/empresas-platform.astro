---
import Layout from '../../layouts/Layout.astro';

const serviceData = {
  title: "Tusdatos Empresas Platform",
  subtitle: "Business Intelligence & Market Research",
  heroDescription: "Access comprehensive business intelligence, market research, and company data to make informed decisions and identify new opportunities in the Colombian market.",
  heroImage: "/images/photos/business-intelligence.jpg",
  icon: "/images/empresas-platform.svg",
  url: "/services/empresas-platform"
};

const features = [
  {
    title: "Company Profiles",
    description: "Detailed company information including financial data, ownership structure, legal status, and business activities.",
    icon: "building"
  },
  {
    title: "Market Research",
    description: "Comprehensive market analysis, industry trends, and competitive intelligence for strategic planning.",
    icon: "chart-bar"
  },
  {
    title: "Financial Data",
    description: "Access to financial statements, credit reports, and economic indicators for risk assessment.",
    icon: "currency-dollar"
  },
  {
    title: "Legal Information",
    description: "Legal status, litigation history, regulatory compliance, and corporate governance data.",
    icon: "document-text"
  },
  {
    title: "Contact Database",
    description: "Verified business contact information, decision-makers, and company directories.",
    icon: "phone"
  },
  {
    title: "Real-time Updates",
    description: "Continuous data updates and alerts for changes in company status or market conditions.",
    icon: "clock"
  }
];

const benefits = [
  "Make informed business decisions with comprehensive data",
  "Identify new market opportunities and potential partners",
  "Assess risks and compliance status of business relationships",
  "Streamline due diligence and research processes",
  "Access verified and up-to-date business information"
];

const useCases = [
  "Business development and market expansion",
  "Investment and M&A due diligence",
  "Supplier and partner verification",
  "Competitive intelligence and analysis",
  "Risk assessment and compliance monitoring"
];

const process = [
  "Define research objectives and scope",
  "Access comprehensive business databases",
  "Analyze market and competitive landscape",
  "Generate detailed reports and insights",
  "Provide strategic recommendations"
];

const testimonials = [
  {
    name: "Ana Rodríguez",
    position: "Business Development Director",
    company: "Inversiones Latino",
    content: "Tusdatos Empresas has been invaluable for our market expansion strategy. The comprehensive company profiles help us identify the best partners and opportunities.",
    rating: 5,
    image: "/images/photos/business-woman.jpg"
  },
  {
    name: "Carlos Mendoza",
    position: "Investment Manager",
    company: "Fondo de Capital Privado",
    content: "The financial data and market research capabilities have significantly improved our investment decision-making process. Highly recommended for any serious investor.",
    rating: 5,
    image: "/images/photos/business-man.jpg"
  },
  {
    name: "Laura Jiménez",
    position: "Strategic Planning Manager",
    company: "Corporación Industrial",
    content: "We use Tusdatos Empresas for competitive intelligence and market analysis. The real-time updates ensure we always have the latest information.",
    rating: 5,
    image: "/images/photos/team-leader.jpg"
  }
];

const stats = [
  { number: "500K+", label: "Company Profiles" },
  { number: "Real-time", label: "Data Updates" },
  { number: "50+", label: "Data Sources" },
  { number: "24/7", label: "Platform Access" }
];

const faqs = [
  {
    question: "What types of companies are included in the database?",
    answer: "Our database includes companies of all sizes across all industries in Colombia, from small businesses to large corporations and multinationals."
  },
  {
    question: "How often is the data updated?",
    answer: "We provide real-time updates as new information becomes available from official sources, with continuous monitoring of company changes."
  },
  {
    question: "Can I export data for analysis?",
    answer: "Yes, you can export data in various formats including PDF, Excel, and CSV for further analysis and reporting."
  },
  {
    question: "Do you provide historical data?",
    answer: "Yes, we maintain historical records of company changes, financial data, and market trends for trend analysis."
  },
  {
    question: "Is the platform available on mobile devices?",
    answer: "Yes, our platform is fully responsive and accessible on desktop, tablet, and mobile devices."
  },
  {
    question: "Do you offer custom research services?",
    answer: "Yes, we offer custom research and analysis services for specific business needs and market studies."
  }
];

const pricing = [
  {
    name: "Basic Access",
    price: "$29",
    period: "per month",
    description: "Essential business intelligence for small businesses",
    features: [
      "Basic company profiles",
      "Limited market data",
      "Email support",
      "Standard reports"
    ],
    popular: false
  },
  {
    name: "Professional Access",
    price: "$79",
    period: "per month",
    description: "Comprehensive platform access for growing businesses",
    features: [
      "All Basic features",
      "Full company profiles",
      "Financial data access",
      "Market research tools",
      "Data export capabilities",
      "Priority support"
    ],
    popular: true
  },
  {
    name: "Enterprise Access",
    price: "$199",
    period: "per month",
    description: "Advanced features for large organizations",
    features: [
      "All Professional features",
      "API access",
      "Custom research services",
      "Advanced analytics",
      "White-label reports",
      "Dedicated account manager"
    ],
    popular: false
  }
];
---

<Layout title="Tusdatos Empresas Platform - Business Intelligence & Market Research | Tusdatos">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center mb-6">
            <img src={serviceData.icon} alt="Empresas Platform Icon" class="w-12 h-12 mr-4" />
            <span class="text-blue-200 font-semibold">Tusdatos Empresas Platform</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            Business Intelligence & Market Research
          </h1>
          <p class="text-xl text-blue-100 mb-8">
            {serviceData.heroDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-blue-50 transition-colors text-center">
              Get Started
            </a>
            <a href="#pricing" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors text-center">
              View Pricing
            </a>
          </div>
        </div>
        <div class="relative">
          <img src={serviceData.heroImage} alt="Business Intelligence Platform" class="rounded-lg shadow-2xl" />
          <div class="absolute -bottom-4 -left-4 bg-white p-4 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600">500K+</div>
              <div class="text-sm text-gray-600">Company Profiles</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-blue-600 mb-2">{stat.number}</div>
            <div class="text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Platform Features</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive business intelligence tools to help you make informed decisions
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {feature.icon === "building" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                )}
                {feature.icon === "chart-bar" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                )}
                {feature.icon === "currency-dollar" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                )}
                {feature.icon === "document-text" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                )}
                {feature.icon === "phone" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                )}
                {feature.icon === "clock" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Why Choose Our Platform?</h2>
          <ul class="space-y-4">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-blue-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-lg">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="relative">
          <img src="/images/photos/market-analysis.jpg" alt="Market Analysis" class="rounded-lg shadow-xl" />
          <div class="absolute -bottom-6 -right-6 bg-white p-6 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600">50+</div>
              <div class="text-sm text-gray-600">Data Sources</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Common Use Cases</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our platform serves various business needs across different industries
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {useCases.map((useCase) => (
          <div class="bg-white p-6 rounded-lg shadow-lg border-l-4 border-blue-500">
            <h3 class="text-lg font-semibold mb-3">{useCase}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">How It Works</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Simple steps to access comprehensive business intelligence
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
        {process.map((step, index) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
              {index + 1}
            </div>
            <h3 class="font-semibold mb-2">{step}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Users Say</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Trusted by businesses across Colombia for their intelligence needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="flex items-center mb-6">
              <img src={testimonial.image} alt={testimonial.name} class="w-16 h-16 rounded-full object-cover mr-4" />
              <div>
                <h4 class="font-semibold">{testimonial.name}</h4>
                <p class="text-gray-600 text-sm">{testimonial.position}</p>
                <p class="text-gray-600 text-sm">{testimonial.company}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">"{testimonial.content}"</p>
            <div class="flex text-yellow-400">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Pricing Plans</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Choose the plan that best fits your business intelligence needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {pricing.map((plan) => (
          <div class={`bg-white p-8 rounded-lg shadow-lg ${plan.popular ? 'ring-2 ring-blue-500 relative' : ''}`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-blue-500 text-white px-4 py-2 rounded-full text-sm font-semibold">Most Popular</span>
              </div>
            )}
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold mb-4">{plan.name}</h3>
              <div class="mb-4">
                <span class="text-4xl font-bold">{plan.price}</span>
                <span class="text-gray-600">/{plan.period}</span>
              </div>
              <p class="text-gray-600">{plan.description}</p>
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-blue-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <a href="/contact" class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-center block">
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Frequently Asked Questions</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Get answers to common questions about our business intelligence platform
        </p>
      </div>
      <div class="max-w-4xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-semibold mb-3">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-blue-600 to-blue-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Access Business Intelligence?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Start making informed business decisions with comprehensive market data and company intelligence. Get access to our platform today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
          Contact Us
        </a>
        <a href="/services" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
          View All Services
        </a>
      </div>
    </div>
  </section>
</Layout> 
---
import Layout from '../../layouts/Layout.astro';

const serviceData = {
  title: "Sanction list screening",
  subtitle: "International Sanctions & PEP Screening",
  heroDescription: "Screen individuals and entities against international sanctions lists, politically exposed persons (PEP) databases, and regulatory blacklists to ensure compliance with global regulations.",
  heroImage: "/images/photos/digital-security.jpg",
  icon: "/images/sanctions-check.svg",
  url: "/services/sanctions-screening"
};

const features = [
  {
    title: "OFAC Sanctions Screening",
    description: "Comprehensive screening against US Office of Foreign Assets Control sanctions lists and Specially Designated Nationals (SDN) database.",
    icon: "flag"
  },
  {
    title: "PEP Screening",
    description: "Identification of politically exposed persons and their associates across global databases.",
    icon: "user-circle"
  },
  {
    title: "UN Sanctions Lists",
    description: "Screening against United Nations Security Council sanctions lists and resolutions.",
    icon: "globe"
  },
  {
    title: "EU Restrictive Measures",
    description: "Compliance with European Union sanctions and restrictive measures across all member states.",
    icon: "shield"
  },
  {
    title: "Real-time Updates",
    description: "Continuous monitoring and real-time updates of sanctions lists and regulatory changes.",
    icon: "clock"
  },
  {
    title: "Comprehensive Reporting",
    description: "Detailed reports with risk assessments and compliance recommendations.",
    icon: "document"
  }
];

const benefits = [
  "Ensure compliance with international regulations",
  "Mitigate financial and reputational risks",
  "Protect against regulatory penalties",
  "Streamline due diligence processes",
  "Access to global sanctions databases"
];

const useCases = [
  "Financial institution compliance",
  "International business partnerships",
  "Investment and M&A due diligence",
  "Supply chain verification",
  "Regulatory reporting requirements"
];

const process = [
  "Initial risk assessment and scope definition",
  "Data collection and entity identification",
  "Multi-database screening process",
  "Risk analysis and scoring",
  "Comprehensive report generation"
];

const testimonials = [
  {
    name: "Roberto Silva",
    position: "Compliance Officer",
    company: "Banco Internacional",
    content: "Tusdatos sanctions screening has been crucial for our international operations. The real-time updates ensure we stay compliant with changing regulations.",
    rating: 5,
    image: "/images/photos/business-presentation.jpg"
  },
  {
    name: "Carmen Vega",
    position: "Risk Director",
    company: "Inversiones Globales",
    content: "Their PEP screening capabilities are exceptional. We've identified several high-risk relationships that could have caused significant compliance issues.",
    rating: 5,
    image: "/images/photos/office-meeting.jpg"
  },
  {
    name: "Diego Morales",
    position: "Legal Counsel",
    company: "Corporaci√≥n Financiera",
    content: "The comprehensive reporting and risk assessments help us make informed decisions and maintain regulatory compliance across all jurisdictions.",
    rating: 5,
    image: "/images/photos/team-collaboration.jpg"
  }
];

const stats = [
  { number: "100+", label: "Sanctions Lists" },
  { number: "99.9%", label: "Accuracy Rate" },
  { number: "Real-time", label: "Updates" },
  { number: "150+", label: "Countries Covered" }
];

const faqs = [
  {
    question: "What sanctions lists do you screen against?",
    answer: "We screen against OFAC, UN, EU, UK, and other major international sanctions lists, as well as local Colombian and Latin American databases."
  },
  {
    question: "How often are the sanctions lists updated?",
    answer: "Our system provides real-time updates as sanctions lists are modified by regulatory authorities worldwide."
  },
  {
    question: "What is a Politically Exposed Person (PEP)?",
    answer: "PEPs are individuals who hold prominent public positions and may be at higher risk for corruption or money laundering activities."
  },
  {
    question: "Can you screen companies and entities?",
    answer: "Yes, we screen both individuals and entities, including companies, organizations, and government bodies."
  },
  {
    question: "What happens if a match is found?",
    answer: "We provide detailed reports with risk assessments and recommendations for compliance actions based on the specific findings."
  },
  {
    question: "Do you offer ongoing monitoring?",
    answer: "Yes, we offer continuous monitoring services to alert you to any changes in sanctions status or new regulatory requirements."
  }
];

const pricing = [
  {
    name: "Basic Screening",
    price: "$5",
    period: "per check",
    description: "Essential sanctions screening for small businesses",
    features: [
      "OFAC sanctions screening",
      "PEP screening",
      "Basic reporting",
      "Email support"
    ],
    popular: false
  },
  {
    name: "Professional Screening",
    price: "$8",
    period: "per check",
    description: "Comprehensive screening with detailed reporting",
    features: [
      "All Basic features",
      "UN sanctions lists",
      "EU sanctions lists",
      "Real-time updates",
      "Detailed reports",
      "Priority support"
    ],
    popular: true
  },
  {
    name: "Enterprise Screening",
    price: "$12",
    period: "per check",
    description: "Advanced screening with custom integrations",
    features: [
      "All Professional features",
      "Custom lists integration",
      "Bulk screening",
      "API access",
      "Advanced analytics",
      "Dedicated support"
    ],
    popular: false
  }
];
---

<Layout title="Sanction list screening - International Sanctions & PEP Screening | Tusdatos">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-green-600 to-green-800 text-white py-20">
    <div class="absolute inset-0 bg-black opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex items-center mb-6">
            <img src={serviceData.icon} alt="Sanctions Screening Icon" class="w-12 h-12 mr-4" />
            <span class="text-green-200 font-semibold">Sanction list screening</span>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">
            International Sanctions & PEP Screening
          </h1>
          <p class="text-xl text-green-100 mb-8">
            {serviceData.heroDescription}
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="bg-white text-green-600 px-8 py-4 rounded-lg font-semibold hover:bg-green-50 transition-colors text-center">
              Get Started
            </a>
            <a href="#pricing" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-colors text-center">
              View Pricing
            </a>
          </div>
        </div>
        <div class="relative">
          <img src={serviceData.heroImage} alt="Sanctions Screening" class="rounded-lg shadow-2xl" />
          <div class="absolute -bottom-4 -left-4 bg-white p-4 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600">100+</div>
              <div class="text-sm text-gray-600">Sanctions Lists</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-green-600 mb-2">{stat.number}</div>
            <div class="text-gray-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Comprehensive Screening Features</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our sanctions screening service covers all major international databases and regulatory requirements
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {feature.icon === "flag" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2z"></path>
                )}
                {feature.icon === "user-circle" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                )}
                {feature.icon === "globe" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
                {feature.icon === "shield" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                )}
                {feature.icon === "clock" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                )}
                {feature.icon === "document" && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                )}
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-4">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Why Choose Our Sanctions Screening?</h2>
          <ul class="space-y-4">
            {benefits.map((benefit) => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-600 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-lg">{benefit}</span>
              </li>
            ))}
          </ul>
        </div>
        <div class="relative">
          <img src="/images/photos/security-check.jpg" alt="Security Check" class="rounded-lg shadow-xl" />
          <div class="absolute -bottom-6 -right-6 bg-white p-6 rounded-lg shadow-lg">
            <div class="text-center">
              <div class="text-2xl font-bold text-green-600">99.9%</div>
              <div class="text-sm text-gray-600">Accuracy Rate</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Common Use Cases</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our sanctions screening service is essential for various industries and compliance requirements
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {useCases.map((useCase) => (
          <div class="bg-white p-6 rounded-lg shadow-lg border-l-4 border-green-500">
            <h3 class="text-lg font-semibold mb-3">{useCase}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Screening Process</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A systematic approach to ensure comprehensive and accurate sanctions screening
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
        {process.map((step, index) => (
          <div class="text-center">
            <div class="w-16 h-16 bg-green-600 text-white rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
              {index + 1}
            </div>
            <h3 class="font-semibold mb-2">{step}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Clients Say</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Trusted by leading financial institutions and corporations worldwide
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <div class="bg-white p-8 rounded-lg shadow-lg">
            <div class="flex items-center mb-6">
              <img src={testimonial.image} alt={testimonial.name} class="w-16 h-16 rounded-full object-cover mr-4" />
              <div>
                <h4 class="font-semibold">{testimonial.name}</h4>
                <p class="text-gray-600 text-sm">{testimonial.position}</p>
                <p class="text-gray-600 text-sm">{testimonial.company}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4">"{testimonial.content}"</p>
            <div class="flex text-yellow-400">
              {[...Array(testimonial.rating)].map(() => (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing Section -->
  <section id="pricing" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Pricing Plans</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Choose the screening plan that best fits your compliance needs
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {pricing.map((plan) => (
          <div class={`bg-white p-8 rounded-lg shadow-lg ${plan.popular ? 'ring-2 ring-green-500 relative' : ''}`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold">Most Popular</span>
              </div>
            )}
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold mb-4">{plan.name}</h3>
              <div class="mb-4">
                <span class="text-4xl font-bold">{plan.price}</span>
                <span class="text-gray-600">/{plan.period}</span>
              </div>
              <p class="text-gray-600">{plan.description}</p>
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-center">
                  <svg class="w-5 h-5 text-green-600 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <a href="/contact" class="w-full bg-green-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-green-700 transition-colors text-center block">
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Frequently Asked Questions</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Get answers to common questions about our sanctions screening service
        </p>
      </div>
      <div class="max-w-4xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-lg font-semibold mb-3">{faq.question}</h3>
            <p class="text-gray-600">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-green-600 to-green-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Start Screening?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Ensure your business compliance with international sanctions and regulations. Get started with our comprehensive screening service today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="bg-white text-green-600 px-8 py-4 rounded-lg font-semibold hover:bg-green-50 transition-colors">
          Contact Us
        </a>
        <a href="/services" class="border border-white text-white px-8 py-4 rounded-lg font-semibold hover:bg-white hover:text-green-600 transition-colors">
          View All Services
        </a>
      </div>
    </div>
  </section>
</Layout> 
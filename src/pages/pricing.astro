---

<Layout title="Pricing - Tusdatos">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-rose-600 via-pink-600 to-purple-700 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {pricingData.title}
        </h1>
        <p class="text-xl mb-8">
          {pricingData.description}
        </p>
      </div>
    </div>
  </section>

  <!-- Service-Specific Pricing -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Service-Specific Pricing
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Choose the right plan for each service based on your specific needs and volume requirements.
        </p>
      </div>

      {servicePricing.map((service, serviceIndex) => (
        <div class="mb-20">
          <div class="text-center mb-12">
            <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">
              {service.service}
            </h3>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              {service.description}
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {service.plans.map((plan, planIndex) => (
              <div class={`relative bg-white rounded-xl shadow-lg p-8 ${planIndex === 1 ? 'ring-2 ring-blue-500 transform scale-105' : ''}`}>
                {planIndex === 1 && (
                  <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                    <span class="bg-blue-500 text-white px-4 py-2 rounded-full text-sm font-semibold">
                      Most Popular
                    </span>
                  </div>
                )}
                
                <div class="text-center mb-8">
                  <h4 class="text-xl font-bold text-gray-900 mb-2">
                    {plan.name}
                  </h4>
                  <div class="mb-4">
                    <span class="text-3xl font-bold text-gray-900">{plan.price}</span>
                    <span class="text-gray-600 ml-2">{plan.period}</span>
                  </div>
                  <p class="text-gray-600 text-sm mb-2">
                    {plan.description}
                  </p>
                  <p class="text-blue-600 font-semibold text-sm">
                    {plan.volume}
                  </p>
                </div>
                
                <ul class="space-y-3 mb-8">
                  {plan.features.map((feature) => (
                    <li class="flex items-start text-gray-700 text-sm">
                      <svg class="w-4 h-4 text-green-500 mr-3 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" style="width: 1rem; height: 1rem;">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>
                
                <div class="text-center">
                  <a href="/contact" 
                     class={`w-full py-3 px-6 rounded-lg font-semibold transition-colors inline-block ${
                       planIndex === 1 
                         ? 'bg-blue-600 text-white hover:bg-blue-700' 
                         : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
                     }`}>
                    Get Started
                  </a>
                </div>
              </div>
            ))}

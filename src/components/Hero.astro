---
// Try importing content collections with a different approach
let title = "Tusdatos: Your Strategic Ally";
let description = "We provide comprehensive validation services to help businesses make informed decisions and maintain compliance with regulatory requirements.";

try {
  const { getCollection } = await import('astro:content');
  const company = await getCollection('company');
  if (company && company.length > 0) {
    title = company[0].data.title;
    description = company[0].data.description;
  }
} catch (error) {
  console.log('Using fallback content for Hero component');
}
---

<section class="relative bg-gradient-to-br from-blue-600 via-blue-700 to-blue-900 text-white py-24 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 left-0 w-72 h-72 bg-white rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse"></div>
    <div class="absolute top-0 right-0 w-72 h-72 bg-purple-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-pulse animation-delay-4000"></div>
  </div>
  
  <!-- Decorative Elements -->
  <div class="absolute top-10 left-10 w-20 h-20 border-2 border-white/20 rounded-full animate-float"></div>
  <div class="absolute top-20 right-20 w-12 h-12 border-2 border-white/20 rounded-full animate-float animation-delay-1000"></div>
  <div class="absolute bottom-20 left-1/4 w-16 h-16 border-2 border-white/20 rounded-full animate-float animation-delay-2000"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Icon/Logo -->
      <div class="mb-8 flex justify-center scroll-animate">
        <div class="w-20 h-20 bg-white/10 rounded-full flex items-center justify-center backdrop-blur-sm border border-white/20 animate-bounce-in">
          <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
      </div>
      
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold mb-8 leading-tight animate-fade-in-up">
        {title}
      </h1>
      <p class="text-xl md:text-2xl mb-12 text-blue-100 max-w-3xl mx-auto leading-relaxed animate-fade-in-up animate-stagger-1">
        {description}
      </p>
      
      <!-- Stats Preview -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12 max-w-2xl mx-auto">
        <div class="text-center scroll-animate animate-stagger-1">
          <div class="text-3xl font-bold text-white" data-counter="500">500+</div>
          <div class="text-blue-200 text-sm">Clients Served</div>
        </div>
        <div class="text-center scroll-animate animate-stagger-2">
          <div class="text-3xl font-bold text-white" data-counter="50">50K+</div>
          <div class="text-blue-200 text-sm">Validations</div>
        </div>
        <div class="text-center scroll-animate animate-stagger-3">
          <div class="text-3xl font-bold text-white" data-counter="99">99.9%</div>
          <div class="text-blue-200 text-sm">Accuracy</div>
        </div>
        <div class="text-center scroll-animate animate-stagger-4">
          <div class="text-3xl font-bold text-white">24/7</div>
          <div class="text-blue-200 text-sm">Support</div>
        </div>
      </div>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up animate-stagger-2">
        <a href="#services" class="bg-white text-blue-600 px-8 py-4 rounded-lg font-semibold hover:bg-blue-50 transition-all duration-300 transform hover:scale-105 shadow-lg btn-animate btn-ripple">
          Explore Services
        </a>
        <a href="#contact" class="bg-blue-500 text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-400 transition-all duration-300 transform hover:scale-105 shadow-lg border border-white/20 btn-animate btn-ripple">
          Contact Us
        </a>
      </div>
      
      <!-- Trust Indicators -->
      <div class="mt-12 pt-8 border-t border-white/20 scroll-animate animate-stagger-3">
        <p class="text-blue-200 text-sm mb-4">Trusted by leading financial institutions</p>
        <div class="flex justify-center items-center space-x-6 opacity-60">
          <div class="text-white/60 font-semibold hover:text-white transition-colors">Banco de Bogot√°</div>
          <div class="text-white/60 font-semibold hover:text-white transition-colors">Grupo Aval</div>
          <div class="text-white/60 font-semibold hover:text-white transition-colors">Bancolombia</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style> 